        }

        .btn.btn-primary {
            width: 151px;
            height: 50px;
            background-color: #1c4335;
            border: 2px solid white;
            cursor: pointer;
        }

        .update-btn {
            position: absolute;
            left: 100px;
        }

        .play-btn {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        .finish-btn {
            position: absolute;
            right: 0;
        }

        .button {
            flex: 1; 
            display: flex;
            justify-content: center; 
