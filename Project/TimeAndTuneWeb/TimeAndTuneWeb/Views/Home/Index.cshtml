        .additionalInfoAboutTaskTab {
            position: absolute;
            background-color: #25232a;
            width: 60%;
            height: 70%;
            z-index: 3;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius: 10px;
            border: 3px solid white;
        }

        .go-back-icon {
            position: absolute;
            left: 20px; 
            top: 20px; 
            margin-top: 10px;
        }

        .go-back-icon img {
            width: 40px;
            height: 40px;
        }

        .dialog-title-container {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            width: 280px;
            height: 60px;
            background: rgba(137, 26, 26, 0);
            box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius: 12px;
            border: 5px solid #a86b11;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .dialog-title-container-additional-info {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            width: 350px;
            height: 60px;
            background: rgba(137, 26, 26, 0);
            box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.25);
