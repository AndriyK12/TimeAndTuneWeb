<body>
    <div>
        <div class="navTab hidden" id="NavTab">
            <div>
                <a class="navItem" asp-controller="Home" asp-action="Index">
                    <img class="navTabImg" src="~/images/home_image.png" alt="Home Icon" />
                    <span>Home</span>
                </a>
            </div>
            <div>
                <a class="navItem" asp-controller="Statistics" asp-action="Statistics">
                    <img class="navTabImg" src="~/images/statistics_image.png" alt="Statistics Icon" />
                    <span>Statistics</span>
                </a>
            </div>
            <div class="navItem">
                <a class="navItem" asp-controller="Focus" asp-action="Focus">
                    <img class="navTabImg" src="~/images/focus_image.png" alt="Focus Icon" />
                    <span>Focus</span>
                </a>
            </div>
            <div class="copyright">
                <span>© Time&amp;Tune</span>
            </div>
        </div>
        <div class="alphaCoverage hidden" id="coverage" onclick="toggleVisibility()"></div>

        <div class="header">
            <div class="menu-icon">
                <img src="~/images/menu_icon.png" alt="Menu Icon" onclick="toggleVisibility()" />
            </div>
            <div class="page-title-container">
                <div class="page-title">Home</div>
            </div>
            <div class="user-icon" onclick="toggleVisibility1()">
                <img src="~/images/user_image.png" alt="User Icon"/>
            </div>
        </div>

        <div class="buttons-body">
            <div class="day-button" id="dayBtn" onclick="DayTable()">
                DAY
            </div>
            <div class="week-button" id="weekBtn" onclick="WeekTable()">
                WEEK
            </div>
            <div class="month-button" id="monthBtn" onclick="MonthTable()">
                MONTH
            </div>
        </div>

        <div class="userTab hidden" id="UserTab">
            <div class="top_elements">
                <span class="username">Username</span>
                <img class="user-icon-in-tab" src="~/images/user_image.png" alt="User Icon" />
            </div>
            <div>
                <img class="coins-image" src="~/images/coins_image.png" alt="Coins Icon" />
                <span class="coins-text">142</span>
            </div>
            <div class="email_div">
                <span class="email">example@gmail.com</span>
            </div>
            <div class="exit-block">
                <img class="exit-image" src="~/images/exit_image.png" alt="Coins Icon" />
                <span class="exit-text">Exit</span>
            </div>
        </div>
        <div class="alphaCoverage hidden" id="coverage1" onclick="toggleVisibility1()"></div>

        <form asp-action="AddNewTask" method="post">
            <div class="createTaskTab hidden" id="CreateTaskTab">
                <div class="go-back-icon" onclick="toggleVisibilityCreateDialog()">
                    <img src="~/images/back_button.png" alt="Go back button" />
                </div>
                <div class="dialog-title-container">
                    <div class="page-title">Create new task</div>
                </div>

                <div class="grid-container">
                    <div class="left-container">
                        <label>Name:</label>
                        <textarea id="largeField" name="Name" class="rounded-input" required oninvalid="this.setCustomValidity('Please fill in this field')"></textarea>
                        <label>Date:</label>
                        <textarea id="largeField" name="Date" class="rounded-input" required oninvalid="this.setCustomValidity('Please fill in this field')"></textarea>
                        <label>Priority:</label>
                        <select id="largeField" name="Priority" class="rounded-input" required oninvalid="this.setCustomValidity('Please fill in this field')">
                            <option value="3">High</option>
                            <option value="2">Standart</option>
                            <option value="1">Low</option>
                        </select>
                    </div>

                    <div class="right-container">
                        <label>Description:</label>
                        <textarea id="largeField" name="Description" class="rounded-input-description"></textarea>

                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </div>
            <div class="alphaCoverage hidden" id="coverageCreateTask" onclick="toggleVisibilityCreateDialog()"></div>
        </form>
        
        <form asp-action="UpdateTask" method="post">
            <div class="additionalInfoAboutTaskTab hidden" id="AdditionalInfoAboutTaskTab">
                <div class="go-back-icon" onclick = "toggleVisibilityAdditionalInfoDialog()">
                    <img src="~/images/back_button.png" alt="Go back button" />
                </div>
                <div class="dialog-title-container-additional-info">
                    <div class="page-title">Additional information</div>
                </div>
                <div id="taskExecutiontime" class="timer-text">00:00:00</div>

                <div class="grid-container">
                    <div class="left-container">
                        <input type="hidden" id="taskId" name="Id"/>
                        <label>Name:</label>
                        <textarea id="taskName" name="Name" class="rounded-input" required oninvalid="this.setCustomValidity('Please fill in this field')"></textarea>
                        <label>Date:</label>
                        <textarea id="taskDate" name="Date" class="rounded-input" required oninvalid="this.setCustomValidity('Please fill in this field')"></textarea>
                        <label>Priority:</label>
                        <select id="taskPriority" name="Priority" class="rounded-input" required oninvalid="this.setCustomValidity('Please fill in this field')">
                            <option value="3">High</option>
                            <option value="2">Standart</option>
                            <option value="1">Low</option>
                        </select>
                    </div>

                    <div class="right-container">
                        <label>Description:</label>
                        <textarea id="taskDescription" name="Description" class="rounded-input-description"></textarea>
                    </div>
                </div>
                <div class="button-container">
                    <button type="submit" class="btn btn-primary update-btn">Update</button>
                    <button id="playButton" class="btn btn-primary play-btn" formaction="/Home/UpdateExecutionTask">Play</button>
                    <button class="btn btn-primary finish-btn" formaction="/Home/FinishTask">Finish</button>
                </div>
            </div>
            <div class="alphaCoverage hidden" id="coverageAdditionInfo" onclick="toggleVisibilityAdditionalInfoDialog()"></div>
        </form>

        <div class="plus-button" onclick = "toggleVisibilityCreateDialog()">
            <img src="~/images/plusButton.png" alt="plus button" />
        </div>
    </div>

    @model List<EFCore.Task>

    @if (Model != null)
    {
        <div class="content">
            @foreach (var task in Model)
            {
                <div class="task-card" onclick="toggleVisibilityAdditionalInfoDialog('@task.Taskid', '@task.Name', '@task.Expectedfinishtime', '@task.Priority', '@task.Description', '@task.Executiontime')">
                    <img class="task-checkbox" src="~/images/task_checkbox.png" />
                    <span class="task-name">@task.Name</span>
                    <span class="task-border">|</span>
                    <span class="task-date">@task.Expectedfinishtime</span>
                    <span class="task-border">|</span>
                    @if (task.Priority == 1)
                    {
                        <img class="task-priority" src="~/images/first_prior_image.png" />
                    }
                    else if (task.Priority == 2){
                        <img class="task-priority" src="~/images/second_prior_image.png" />
                    }
                    else if (task.Priority == 3)
                    {
                        <img class="task-priority" src="~/images/third_prior_image.png" />
                    }
                </div>
            }
        </div>
    }
    <script>
        // document.addEventListener("DOMContentLoaded", function () {
            
        //     var playButton = document.getElementById("playButton");
           
        //     playButton.innerText = "Stop";
        // });

        function toggleVisibility() {
            var NavTab = document.getElementById('NavTab');
            var coverage = document.getElementById('coverage');

            if (NavTab.classList.contains('hidden')) {
                NavTab.classList.remove('hidden');
                NavTab.classList.add('visible');
            } else {
                NavTab.classList.remove('visible');
                NavTab.classList.add('hidden');
            }

            if (coverage.classList.contains('hidden')) {
                coverage.classList.remove('hidden');
                coverage.classList.add('visible');
            } else {
                coverage.classList.remove('visible');
                coverage.classList.add('hidden');
            }
        }

        function toggleVisibility1() {
            var UserTab = document.getElementById('UserTab');
            var coverage = document.getElementById('coverage1');

            if (UserTab.classList.contains('hidden')) {
                UserTab.classList.remove('hidden');
                UserTab.classList.add('visible');
            } else {
                UserTab.classList.remove('visible');
                UserTab.classList.add('hidden');
            }

            if (coverage.classList.contains('hidden')) {
                coverage.classList.remove('hidden');
                coverage.classList.add('visible');
            } else {
                coverage.classList.remove('visible');
                coverage.classList.add('hidden');
            }
        }

        function toggleVisibilityCreateDialog(){
            var createTaskDialog = document.getElementById('CreateTaskTab')
            var coverage = document.getElementById('coverageCreateTask');

            if (createTaskDialog.classList.contains('hidden')) {
                createTaskDialog.classList.remove('hidden');
                createTaskDialog.classList.add('visible');
            } else {
                createTaskDialog.classList.remove('visible');
                createTaskDialog.classList.add('hidden');
            }

            if (coverage.classList.contains('hidden')) {
                coverage.classList.remove('hidden');
                coverage.classList.add('visible');
            } else {
                coverage.classList.remove('visible');
                coverage.classList.add('hidden');
            }

        }

        function toggleVisibilityAdditionalInfoDialog(taskId, taskName, taskExpectedFinishtime, taskPriority, taskDescription, taskExecutiontime) {
            var AdditionalInfoDialog = document.getElementById('AdditionalInfoAboutTaskTab')
            var coverage = document.getElementById('coverageAdditionInfo');

            if (AdditionalInfoDialog.classList.contains('hidden')) {
                AdditionalInfoDialog.classList.remove('hidden');
                AdditionalInfoDialog.classList.add('visible');

                document.getElementById('taskId').value = taskId;
                document.getElementById('taskName').value = taskName;
                document.getElementById('taskDate').value = taskExpectedFinishtime;
                document.getElementById('taskPriority').value = taskPriority;
                document.getElementById('taskDescription').value = taskDescription;
                document.getElementById('taskExecutiontime').textContent = taskExecutiontime.split('.')[0];

                var playButton = document.getElementById('playButton');

                var cookies = document.cookie.split(';');
                var tasksInfoCookie = cookies.find(function (cookie) {
                    return cookie.trim().startsWith('TasksInfo' + taskId);
                });

                if (tasksInfoCookie) {
                    playButton.textContent = 'Stop';
                } else {
                    playButton.textContent = 'Start';
                }
            } else {
                AdditionalInfoDialog.classList.remove('visible');
                AdditionalInfoDialog.classList.add('hidden');
            }

            if (coverage.classList.contains('hidden')) {
                coverage.classList.remove('hidden');
                coverage.classList.add('visible');
            } else {
                coverage.classList.remove('visible');
                coverage.classList.add('hidden');
            }
        }

        function DayTable() {
            var dayBtn = document.getElementById('dayBtn');
            var weekBtn = document.getElementById('weekBtn');
            var monthBtn = document.getElementById('monthBtn');

            dayBtn.style.backgroundColor = '#7A7373';
            weekBtn.style.backgroundColor = '#353535';
            monthBtn.style.backgroundColor = '#353535';
        }

        function WeekTable() {
            var dayBtn = document.getElementById('dayBtn');
            var weekBtn = document.getElementById('weekBtn');
            var monthBtn = document.getElementById('monthBtn');

            dayBtn.style.backgroundColor = '#353535';
            weekBtn.style.backgroundColor = '#7A7373';
            monthBtn.style.backgroundColor = '#353535';
        }

        function MonthTable() {
            var dayBtn = document.getElementById('dayBtn');
            var weekBtn = document.getElementById('weekBtn');
            var monthBtn = document.getElementById('monthBtn');

            dayBtn.style.backgroundColor = '#353535';
            weekBtn.style.backgroundColor = '#353535';
            monthBtn.style.backgroundColor = '#7A7373';
        }
    </script>

</body>
</html>
